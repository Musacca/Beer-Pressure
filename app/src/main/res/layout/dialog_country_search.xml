<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:layout_height="280dp"
    >
    <RelativeLayout
        android:background="@color/backgroundColor_DialogCountrySearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/search_lyt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/headerColor_DialogCountrySearch"
        >

        <ImageView
            android:id="@+id/search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_search"

            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/search"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:hint="Search..."
            android:textColor="@color/searchTextColor_DialogCountrySearch"
            android:textColorHint="@color/searchTextColor_DialogCountrySearch"
            android:background="@color/headerColor_DialogCountrySearch"/>

    </RelativeLayout>
        <ListView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/list"
            android:divider="@null"
            android:layout_below="@+id/search_lyt"
            >
        </ListView>
        <TextView
            android:id="@+id/cancel_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Cancel"
            android:layout_alignParentRight="true"
            android:layout_below="@id/list"
            android:padding="20dp"
            android:textColor="@color/cancelTextColor_DialogCountrySearch"/>
</RelativeLayout>
</RelativeLayout>